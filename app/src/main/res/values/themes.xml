<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Recycler" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MainButton" parent="@style/Widget.AppCompat.Button">
        <item name="elevation">6dp</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#499B50</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowColor">#1A0C6329</item>
        <item name="android:background">@drawable/round_button</item>
    </style>
    <style name="TitleText" parent="@style/Widget.AppCompat.TextView">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#499B50</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">15</item>
        <item name="android:shadowDy">30</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowColor">#260C6329</item>
    </style>
</resources>